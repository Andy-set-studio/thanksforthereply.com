{% extends 'layouts/base.njk' %}
{% set layoutStyles = [
  'components/intro.css',
  'components/modal.css'
] %}

{% block content %}
  <main id="main-content">
    <article class="[ intro ] [ flow ] [ measure-short ]">
      <h1 class="text-700 md:text-800 leading-tight">{{ title | replace(defaultName, '') }}<span data-element="name">{{ defaultName }}</span>!</h1>
      <p data-element="message">{{ summary }}</p>
      <img class="intro__trophy" src="/images/trophy.svg" alt="A golden trophy with a wooden base. The trophy has a thumbsup icon and the base has the inscription 'youâ€™re great'" draggable="false" loading="lazy" />
      <page-actions></page-actions>
    </article>
    <modal-window name="{{ defaultName }}" message="{{ summary }}"></modal-window>
  </main>
{% endblock %}
{% block components %} 
  <script type="module" src="/js/components/modal-window.js"></script>
  <script type="module" src="/js/components/page-actions.js"></script>
{% endblock %}
